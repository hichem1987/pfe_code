<config>
    <modules>
        <OneThemes_Bakery>
            <version>1.0.0</version>
        </OneThemes_Bakery>
    </modules>
        <frontend>
        <routers>
            <bakery>
                <use>standard</use>
                <args>
                    <module>OneThemes_Bakery</module>
                    <frontName>bakery</frontName>
                </args>
            </bakery>
        </routers>
        <layout>
            <updates>
                <bakery>
                    <file>bakery.xml</file>
                </bakery>
            </updates>
        </layout> 
        <events>
            <controller_action_postdispatch>
                <observers>
                    <prevnext_set_filtered_category_product_collection>
                        <class>bakery/observer</class>
                        <method>setPrevNextProductCollection</method>
                    </prevnext_set_filtered_category_product_collection>
                </observers>
            </controller_action_postdispatch>
            <catalog_block_product_list_collection>
                <observers>
                    <bakery>
                        <type>model</type>
                        <class>bakery/observer</class>
                        <method>catalogBlockProductCollectionBeforeToHtml</method>
                    </bakery>
                </observers>
            </catalog_block_product_list_collection>
        </events>
    </frontend>
    <admin>
        <routers>
	       <bakery>
				<use>admin</use>
				<args>
				    <module>OneThemes_Bakery</module>
				    <frontName>bakery</frontName>
				</args>
	       </bakery>
        </routers>
    </admin>
    <adminhtml>
		<layout>
		    <updates>
			<bakery>
			    <file>bakery.xml</file>
			</bakery>
		    </updates>
		</layout>
        <events>
            <controller_action_postdispatch_adminhtml_system_config_save>
                <observers>
                    <bakery>
                        <type>singleton</type>
                        <class>bakery/observer</class>
                        <method>configSave</method>
                    </bakery>
                </observers>
            </controller_action_postdispatch_adminhtml_system_config_save>

            <store_edit>
                <observers>
                    <bakery>
                        <type>singleton</type>
                        <class>bakery/observer</class>
                        <method>storeEdit</method>
                    </bakery>
                </observers>
            </store_edit>
        </events>
    </adminhtml>   
